
// EA macros

#define EnemyReinforcements(unitPtr) "SMOV 0x2 (unitPtr|0x8000000); CALL $9EE274; EVBIT_T 0x7; ENDA"
#define ReinforcementEventENDA(unitPtr) "SMOV 0x2 (unitPtr|0x8000000); CALL $9EE274; EVBIT_T 0x7; ENDA"
#define EnemyReinforcementsNoENDA(unitPtr) "SMOV 0x2 (unitPtr|0x8000000); CALL $9EE274; EVBIT_T 0x7"
#define ReinforcementEventNoENDA(unitPtr) "SMOV 0x2 (unitPtr|0x8000000); CALL $9EE274; EVBIT_T 0x7"
#define LoadEnemies(unitPtr) "LOAD1 0x1 unitPtr; ENUN"
// Shouldn't need to set fixed growth flag for enemies due to ASM change to make fixed growths always apply
//#define LoadEnemies(unitPtr) "ENUT FIXED_GROWTHS_FLAG_ID; LOAD1 0x1 unitPtr; ENUN; ENUF FIXED_GROWTHS_FLAG_ID"
#define LoadPlayerUnits(unitPtr) "LOAD1 0x0 unitPtr; ENUN"
#define LoadPlayerUnitsTest(unitPtr) "ENUT FIXED_GROWTHS_FLAG_ID; LOAD1 0x0 unitPtr; ENUN; ENUF FIXED_GROWTHS_FLAG_ID" // only player units need the flag for fixed growths

#define LoadUnit(x,y) "UNIT 0x2 0x11 0x1 Level(1,Ally,1) [x,y] 0x00 0x00 0x00 0x00 [0x00] NoAI" // for units in player placement with prep menu
#define LoadUnit(x,y,unitID) "UNIT unitID 0x11 0x1 Level(1,Ally,1) [x,y] 0x00 0x00 0x00 0x00 [0x00] NoAI" // for units in player placement with prep menu

#define Kill(unitid) "SET_SOMETHING unitid;DISA_IF unitid"

#define GetUnitInDeploySlot(deploySlot) "SVAL 1 deploySlot; ASMC GetUnitInDeploySlotHack|1"
#define SetUnitCondition(unitID,condition,condValue) "SETVAL condValue condition; SET_CONDITION unitID"

// Sme
#define SetUnitStatus(unitID,statusOffset,statusValue) "SVAL 2 statusValue; SHORT $0D40; BYTE unitID statusOffset; POIN Set_Status_Hack|1"
#define SetUnitStatus(x,y,statusOffset,statusValue) "SVAL 2 statusValue; SHORT $0D40; BYTE x y statusOffset; POIN Set_Status_Hack|1"

#define SetAllUnitStatus(unitID,statusOffset,statusValue) "SVAL 1 unitID; SVAL 2 0; SVAL 3 0; SVAL 4 0xFF; SVAL 0xA statusOffset; SVAL 0xB statusValue; ASMC Set_All_Status_Hack|1"
#define SetAllUnitStatus2(unitID,statusOffset,statusValue) "BYTE $40 $05 $01 $00 ; SHORT unitID; BYTE $00 $00 $40 $05 $02 $00 $00 $00 $00 $00 $40 $05 $03 $00 $00 $00 $00 $00 $40 $05 $04 $00 $FF $00 $00 $00 $40 $05 $0A $00; SHORT statusOffset; BYTE $00 $00 $40 $05 $0B $00; WORD statusValue; BYTE $40 $0D $00 $00; POIN Set_All_Status_Hack|1"

