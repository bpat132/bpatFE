#define GiveItem(Item,Character) "CALL $591F40; SVAL 0x3 Item ; GIVEITEMTO Character"

// Pik?
#define SilentGiveItem(unitid, itemid) "SVAL 0x1 unitid; BYTE 0x41 0x0D 0x0 itemid; POIN SilentGiveItemASMC|1"
#define SilentGiveItem1(itemid) "BYTE 0x41 0x0D 0x0 itemid; POIN SilentGiveItemASMC|1"
